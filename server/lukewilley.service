[Unit]
Description=uWSGI LukeWilley server instance
After=syslog.target

[Service]
ExecStart=/apps/venv/bin/uwsgi -H /apps/venv --master --processes 4 --threads 2 --http :5000 --logto /var/log/uwsgi/%n.log --manage-script-name --python-path /apps/lukewilley --mount /=wsgi:app
RuntimeDirectory=/apps/lukewilley/
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target